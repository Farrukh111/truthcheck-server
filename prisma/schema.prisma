// server/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  // üî• –í–ê–ñ–ù–û: –ò—Å–ø–æ–ª—å–∑—É–µ–º PostgreSQL (Neon Tech)
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id // Device ID
  email     String?  @unique
  tier      String   @default("FREE")
  createdAt DateTime @default(now())
  checks    Check[]
}

model Check {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  
  userId      String
  user        User     @relation(fields: [userId], references: [id])

  type        String   // "video", "text"
  content     String   // –°—Å—ã–ª–∫–∞ –∏–ª–∏ —Ç–µ–∫—Å—Ç
  
  verdict     String?  // CONFIRMED, FAKE...
  confidence  Float?
  summary     String?  @db.Text
  aiModel     String?
  durationMs  Int?

  // üî• –ù–û–í–´–ï –ü–û–õ–Ø –î–õ–Ø –ü–û–õ–ù–û–ô –ò–°–¢–û–†–ò–ò
  keyClaim    String?  @db.Text // –ö—Ä–∞—Ç–∫–∞—è —Å—É—Ç—å
  sources     String?  @db.Text // JSON-—Å—Ç—Ä–æ–∫–∞ —Å –º–∞—Å—Å–∏–≤–æ–º —Å—Å—ã–ª–æ–∫
}